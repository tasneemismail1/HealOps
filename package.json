{
  "name": "HealOps",
  "version": "0.0.1",
  "publisher": "Tasneem",
  "description": "A VSCode extension focused on self-healing microservices architecture.",
  "repository": {
    "type": "git",
    "url": "https://github.com/tasneemismail1/HealOps.git"
  },
  "keywords": [
    "VSCode",
    "extension",
    "HealOps",
    "self-healing",
    "microservices",
    "observability"
  ],
  "author": "Tasneem",
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:healops.scanMicroservices"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "healops.scanMicroservices",
        "title": "Scan Microservices",
        "category": "HealOps"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run lint && node esbuild.js --production",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
